<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:visibility="gone"
            android:id="@+id/tvDateLove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp"
            android:background="@drawable/shape_white_full_radius"
            android:fontFamily="@font/love_girl"
            android:gravity="center"
            android:includeFontPadding="false"
            android:paddingStart="@dimen/_6sdp"
            android:paddingTop="@dimen/_2sdp"
            android:paddingEnd="@dimen/_6sdp"
            android:paddingBottom="@dimen/_2sdp"
            tools:text="\t05-09-1998\t"
            android:textColor="@color/pinkEC2994"
            android:textSize="@dimen/_11sdp"
            android:textStyle="bold"
            app:drawableLeftCompat="@drawable/ic_love_clock_view"
            app:layout_constraintEnd_toEndOf="@+id/llDay"
            app:layout_constraintStart_toStartOf="@+id/llYear"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/llYear"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_56sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_marginBottom="@dimen/_12sdp"
            android:background="@drawable/shape_clock"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/llMonth"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvDateLove"
            app:layout_constraintVertical_bias="1.0">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvYear"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:fontFamily="@font/love_girl"
                android:includeFontPadding="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_22sdp"
                android:textStyle="bold"
                tools:text="1" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/appCompatTextView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:background="@drawable/shape_white_full_radius"
                android:fontFamily="@font/love_girl"
                android:gravity="center"
                android:includeFontPadding="false"
                android:paddingStart="@dimen/_6sdp"
                android:paddingTop="@dimen/_2sdp"
                android:paddingEnd="@dimen/_6sdp"
                android:paddingBottom="@dimen/_2sdp"
                android:text="@string/txt_year"
                android:textColor="@color/pinkEC2994"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/llMonth"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_56sdp"
            android:background="@drawable/shape_clock"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@+id/llYear"
            app:layout_constraintEnd_toStartOf="@+id/llWeek"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/llYear"
            app:layout_constraintTop_toTopOf="@+id/llYear">

            <androidx.appcompat.widget.AppCompatTextView
                android:fontFamily="@font/love_girl"
                android:id="@+id/tvMonth"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                tools:text="1"
                android:textColor="@color/white"
                android:textSize="@dimen/_22sdp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="151dp"
                tools:layout_editor_absoluteY="26dp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_marginTop="@dimen/_3sdp"
                android:id="@+id/appCompatTextView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/love_girl"
                android:background="@drawable/shape_white_full_radius"
                android:includeFontPadding="false"
                android:textStyle="bold"
                android:paddingStart="@dimen/_6sdp"
                android:paddingTop="@dimen/_2sdp"
                android:paddingEnd="@dimen/_6sdp"
                android:paddingBottom="@dimen/_2sdp"
                android:text="@string/txt_month"
                android:textColor="@color/pinkEC2994"
                android:textSize="@dimen/_10sdp"
                tools:layout_editor_absoluteX="131dp"
                tools:layout_editor_absoluteY="58dp" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/llWeek"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_56sdp"
            android:background="@drawable/shape_clock"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@+id/llYear"
            app:layout_constraintEnd_toStartOf="@+id/llDay"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/llMonth"
            app:layout_constraintTop_toTopOf="@+id/llYear">

            <androidx.appcompat.widget.AppCompatTextView
                android:fontFamily="@font/love_girl"
                android:id="@+id/tvWeek"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                tools:text="1"
                android:textColor="@color/white"
                android:textSize="@dimen/_22sdp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_marginTop="@dimen/_3sdp"
                android:id="@+id/appCompatTextView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:fontFamily="@font/love_girl"
                android:background="@drawable/shape_white_full_radius"
                android:includeFontPadding="false"
                android:paddingStart="@dimen/_6sdp"
                android:paddingTop="@dimen/_2sdp"
                android:paddingEnd="@dimen/_6sdp"
                android:paddingBottom="@dimen/_2sdp"
                android:text="@string/txt_week"
                android:textColor="@color/pinkEC2994"
                android:textSize="@dimen/_10sdp" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/llDay"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_56sdp"
            android:background="@drawable/shape_clock"
            android:gravity="center"
            android:layout_marginTop="@dimen/_6sdp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@+id/llYear"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/llWeek"
            app:layout_constraintTop_toTopOf="@+id/llYear">

            <androidx.appcompat.widget.AppCompatTextView
                android:fontFamily="@font/love_girl"
                android:id="@+id/tvDay"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                tools:text="1"
                android:textColor="@color/white"
                android:textSize="@dimen/_22sdp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_marginTop="@dimen/_3sdp"
                android:id="@+id/appCompatTextView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:fontFamily="@font/love_girl"
                android:background="@drawable/shape_white_full_radius"
                android:includeFontPadding="false"
                android:paddingStart="@dimen/_6sdp"
                android:paddingTop="@dimen/_2sdp"
                android:paddingEnd="@dimen/_6sdp"
                android:paddingBottom="@dimen/_2sdp"
                android:text="@string/txt_day"
                android:textColor="@color/pinkEC2994"
                android:textSize="@dimen/_10sdp" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>